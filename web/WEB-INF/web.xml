<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SupprimerVoiture</servlet-name>
        <servlet-class>Controller.SupprimerVoiture</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AfficheVoiture</servlet-name>
        <servlet-class>Controller.AfficheVoiture</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjouterVoiture</servlet-name>
        <servlet-class>Controller.AjouterVoiture</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModifierVoiture</servlet-name>
        <servlet-class>Controller.ModifierVoiture</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AfficheReservation</servlet-name>
        <servlet-class>Controller.AfficheReservation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SupprimerReservation</servlet-name>
        <servlet-class>Controller.SupprimerReservation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjouterReservation</servlet-name>
        <servlet-class>Controller.AjouterReservation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjouterClient</servlet-name>
        <servlet-class>Controller.AjouterClient</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SupprimerVoiture</servlet-name>
        <url-pattern>/SupprimerVoiture</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AfficheVoiture</servlet-name>
        <url-pattern>/AfficheVoiture</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjouterVoiture</servlet-name>
        <url-pattern>/AjouterVoiture</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifierVoiture</servlet-name>
        <url-pattern>/ModifierVoiture</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AfficheReservation</servlet-name>
        <url-pattern>/AfficheReservation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SupprimerReservation</servlet-name>
        <url-pattern>/SupprimerReservation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjouterReservation</servlet-name>
        <url-pattern>/AjouterReservation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjouterClient</servlet-name>
        <url-pattern>/AjouterClient</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
